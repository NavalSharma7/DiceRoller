<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minWidth="1000dp"
    android:padding="10dp"
    android:layout_margin="5dp"
    android:minHeight="300dp"
    android:background="@color/parent_background_color"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_dialog_header"
        android:gravity="center"
        style="@style/LargeOrangeFont"
        android:text="@string/enter_the_sides_of_custom_dice_max_250"/>
    <EditText
        android:id="@+id/et_num_sides"
        android:inputType="number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="4dp"
        android:layout_below="@+id/tv_dialog_header"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:hint="@string/number_of_sides" />
    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_marginTop="30dp"
       android:layout_below="@+id/et_num_sides"

        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/action_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_weight="50"
        android:text="OK"
        style="@style/CustomButton"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/action_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_weight="50"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="CANCEL"
        style="@style/CustomButton"
        android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>