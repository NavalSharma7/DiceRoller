<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical"
    tools:context=".DiceRollActivity">
<TextView
    android:layout_width="match_parent"
    android:layout_weight="5"
    android:id="@+id/tv_label_dice_value"
    android:layout_height="wrap_content"
    android:text="You have choosen a "/>
    <TextView
        android:layout_width="match_parent"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:text="CHOOSE HOW MANY TIMES TO ROLL"/>
    <RadioGroup
        android:id="@+id/rg_dice_rolls"
        android:layout_weight="40"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb_roll_once"
            android:layout_width="match_parent"
            android:text="ROLL ONCE"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ROLL TWICE"
            android:id="@+id/rb_roll_twice"/>
    </RadioGroup>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:layout_weight="40"
    android:weightSum="100"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_gravity="center"
        android:layout_weight="50"
        android:visibility="invisible"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:id="@+id/tv_value_first_roll"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:layout_weight="50"
        android:visibility="invisible"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:id="@+id/tv_value_second_roll"
        />
</LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:id="@+id/btn_roll"
        android:layout_gravity="bottom"
        android:text="ROLL"/>

</LinearLayout>