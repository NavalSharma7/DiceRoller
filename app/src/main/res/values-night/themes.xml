<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiceRoller" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dim_gray</item>
        <item name="colorPrimaryVariant">@color/dim_gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="buttonStyle">@style/CustomButton</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DiceRoller.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="CustomTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">serif</item>
    </style>
    <style name="LargeOrangeFont">
        <item name="android:textColor">@color/primaryColorNight</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="LargeBlackFont">
        <item name="android:textColor">@color/primaryColorNight</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="PrimaryText">
        <item name="android:textColor">@color/primaryColorNight</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PrimaryEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/primaryColorNight</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">@color/primaryColorNight</item>

    </style>
    <style name="CustomButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/white_smoke</item>
        <item name="backgroundTint">@color/primaryColorNight</item>
    </style>
    <style name="CardViewBackground" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/parent_background_color_night_cardview</item>
    </style>
    <style name="background">
        <item name="backgroundTint">@color/parent_background_color_night</item>
        <item name="background">@color/parent_background_color_night</item>
        <item name="backgroundColor">@color/parent_background_color_night</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/primaryColorNight</item>
        <item name="backgroundColor">@color/primaryColorNight</item>
        <item name="backgroundTint">@color/primaryColorNight</item>
        <item name="buttonTint">@color/primaryColorNight</item>
    </style>
    <style name="Theme.DiceRoller.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DiceRoller.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>